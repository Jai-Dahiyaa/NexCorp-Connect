{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "tsc",
    "dev": "dotenv -e .env -- nodemon src/index.js",
    "start": "node src/index.js",
    "reset": "cross-env NODE_ENV=development dotenv -e .env -- npx prisma migrate reset --force",
    "migrate": "cross-env NODE_ENV=development dotenv -e .env -- npx prisma migrate dev",
    "reset:test": "cross-env NODE_ENV=test dotenv -e .env.test -- npx prisma migrate reset --force",
    "migrate:test": "cross-env NODE_ENV=test dotenv -e .env.test -- npx prisma migrate deploy",
    "test": "npm run reset:test && npm run migrate:test && cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules dotenv -e .env.test -- jest",
    "test:watch": "cross-env NODE_ENV=test dotenv -e .env.test -- jest --watch",
    "worker": "node src/jobs/workers/post.worker.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "keywords": [
    "backend",
    "nodejs",
    "express",
    "postgresql",
    "redis",
    "rest-api",
    "authentication",
    "jwt",
    "oauth",
    "caching",
    "bullmq",
    "docker",
    "ci-cd",
    "ngrok",
    "swagger"
  ],
  "author": "Jai Dahiya",
  "license": "ISC",
  "description": "This is SkillBridge Project My First project in this project only one difference is this project do everythink.",
